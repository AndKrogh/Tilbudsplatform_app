@page "/Create-worklogs"
@inject IWorklogInterface WorklogService
@inject IWorkTaskInterface WorkTaskService
@inject IUserInterface UserService
@inject IProjectInterface ProjectService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h3>Create Worklog</h3>

<EditForm Model="newWorklog" OnValidSubmit="HandleCreateWorklog">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label for="description">Description:</label>
        <InputText id="description" @bind-Value="newWorklog.Description" />
    </div>

    <div>
        <label for="hoursWorked">Hours Worked:</label>
        <InputNumber id="hoursWorked" @bind-Value="newWorklog.HoursWorked" />
    </div>

    <div>
        <label for="dateWorked">Date Worked:</label>
        <InputDate id="dateWorked" @bind-Value="newWorklog.DateWorked" />
    </div>

    <div>
        <label for="workTaskId">Work Task:</label>
        <select id="workTaskId" @bind="selectedWorkTaskId">
            <option value="">Select Work Task</option>
            @if (workTasks != null)
            {
                @foreach (var workTask in workTasks)
                {
                    <option value="@workTask.Id">@workTask.Title</option>
                }
            }
            else
            {
                <option value="">Loading Work Tasks...</option>
            }
        </select>
    </div>

    <div>
        <label for="createNewWorkTask">OR Create New Work Task</label>
        <InputCheckbox id="createNewWorkTask" @bind-Value="createNewWorkTask" />
    </div>

    @if (createNewWorkTask)
    {
        <div>
            <label for="newWorkTaskTitle">New Work Task Title:</label>
            <InputText id="newWorkTaskTitle" @bind-Value="newWorkTaskTitle" />
        </div>

        <div>
            <label for="newWorkTaskDescription">New Work Task Description:</label>
            <InputText id="newWorkTaskDescription" @bind-Value="newWorkTaskDescription" />
        </div>

        <div>
            <label for="newProjectId">Select Project for Work Task:</label>
            <select id="newProjectId" @bind="newProjectId">
                <option value="">Select Project</option>
                @if (projects != null)
                {
                    @foreach (var project in projects)
                    {
                        <option value="@project.Id">@project.Name</option>
                    }
                }
                else
                {
                    <option value="">Loading Projects...</option>
                }
            </select>
        </div>
    }

    <div>
        <label for="userId">User:</label>
        <select id="userId" @bind="newWorklog.UserId">
            <option value="">Select User</option>
            @if (users != null)
            {
                @foreach (var user in users)
                {
                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                }
            }
            else
            {
                <option value="">Loading Users...</option>
            }
        </select>
    </div>

    <button type="submit">Add Worklog</button>
</EditForm>

@if (errorMessage != null)
{
    <div>@errorMessage</div>
}

<h3>Worklog List</h3>

@if (worklogs == null)
{
    <p>Loading worklogs...</p>
}
else if (!worklogs.Any())
{
    <p>No worklogs found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Hours Worked</th>
                <th>Date Worked</th>
                <th>Work Task</th>
                <th>User</th>
                <th>Project</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var worklog in worklogs)
            {
                <tr>
                    <td>@worklog.Description</td>
                    <td>@worklog.HoursWorked</td>
                    <td>@worklog.DateWorked.ToShortDateString()</td>
                    <td>@worklog.WorkTask.Title</td>
                    <td>@worklog.User.FirstName @worklog.User.LastName</td>
                    <td>@worklog.WorkTask.Project.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Worklog newWorklog = new Worklog();
    private string newWorkTaskTitle = string.Empty;
    private string newWorkTaskDescription = string.Empty;
    private int selectedWorkTaskId;
    private bool createNewWorkTask = false;
    private int newProjectId;
    private List<Worklog>? worklogs;
    private List<User>? users;
    private List<WorkTask>? workTasks;
    private List<Project>? projects;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadWorklogs();
        await LoadUsers();
        await LoadWorkTasks();
        await LoadProjects();
    }

    private async Task HandleCreateWorklog()
    {
        try
        {
            if (createNewWorkTask)
            {
                if (string.IsNullOrWhiteSpace(newWorkTaskTitle) || string.IsNullOrWhiteSpace(newWorkTaskDescription) || newProjectId == 0)
                {
                    errorMessage = "All fields for new work task must be filled out.";
                    return;
                }

                var newWorkTask = new WorkTask
                    {
                        Title = newWorkTaskTitle,
                        Description = newWorkTaskDescription,
                        ProjectId = newProjectId
                    };

                await WorkTaskService.CreateAsync(newWorkTask);
                newWorklog.WorkTaskId = newWorkTask.Id;
            }
            else
            {
                if (selectedWorkTaskId == 0)
                {
                    errorMessage = "Work Task is required.";
                    return;
                }
                newWorklog.WorkTaskId = selectedWorkTaskId;
            }

            if (newWorklog.UserId == 0)
            {
                errorMessage = "User is required.";
                return;
            }

            await WorklogService.CreateAsync(newWorklog);
            newWorklog = new Worklog();
            newWorkTaskTitle = string.Empty;
            newWorkTaskDescription = string.Empty;
            selectedWorkTaskId = 0;
            createNewWorkTask = false;
            await LoadWorklogs();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating worklog: {ex.Message}";
        }
    }

    private async Task LoadWorklogs()
    {
        worklogs = (await WorklogService.GetAllWorklogsAsync()).ToList();
    }

    private async Task LoadUsers()
    {
        users = (await UserService.GetAllUsersAsync()).ToList();
    }

    private async Task LoadWorkTasks()
    {
        workTasks = (await WorkTaskService.GetAllWorkTasksAsync()).ToList();
    }

    private async Task LoadProjects()
    {
        projects = (await ProjectService.GetAllProjectsAsync()).ToList();
    }
}
